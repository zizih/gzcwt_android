<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="30dp"
              android:paddingRight="30dp"
              android:background="#dadde2">

    <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:textColor="#000000"
                    android:textSize="16px"
                    android:gravity="center"
                    android:text="机车："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="25dp"
                    android:textColor="#000000"
                    android:textSize="16px"
                    android:gravity="center"
                    android:text="车次："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="25dp"
                    android:textColor="#000000"
                    android:textSize="16px"
                    android:text="出勤："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="25dp"
                    android:textColor="#000000"
                    android:textSize="16px"
                    android:text="退勤："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp">

            <EditText
                    android:id="@+id/et_car_num"
                    android:hint="请输入机车号"
                    android:textColor="#000"
                    android:textSize="16px"
                    android:gravity="center"
                    android:lines="1"
                    android:digits="@string/et_digits"
                    android:background="@drawable/pda_opt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/et_train_num"
                    android:layout_marginTop="15dp"
                    android:hint="请输入车次"
                    android:textColor="#000"
                    android:background="@drawable/pda_opt"
                    android:textSize="16px"
                    android:gravity="center"
                    android:lines="1"
                    android:digits="@string/et_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/btn_start_work"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:background="@drawable/pda_txt"
                    android:textSize="16px"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <Button
                    android:id="@+id/btn_off_work"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:background="@drawable/pda_txt"
                    android:textSize="16px"
                    android:onClick="onClick"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:gravity="center">

            <TextView
                    android:textColor="#000000"
                    android:textSize="16px"
                    android:gravity="center"
                    android:text="型："
                    android:digits="@string/et_digits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="25dp"
                    android:textColor="#000000"
                    android:textSize="16px"
                    android:gravity="center"
                    android:text="司机："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="25dp"
                    android:textColor="#000000"
                    android:textSize="16px"
                    android:text="副司机："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="25dp"
                    android:textColor="#000000"
                    android:textSize="16px"
                    android:text="学员："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </LinearLayout>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp">

            <EditText
                    android:id="@+id/et_car_type"
                    android:hint="请输入机车型"
                    android:textColor="#000"
                    android:textSize="16px"
                    android:lines="1"
                    android:gravity="center"
                    android:digits="@string/et_digits"
                    android:background="@drawable/pda_opt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/et_main_driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/pda_txt"
                    android:gravity="center"
                    android:lines="1"
                    android:hint="请输入司机姓名"
                    android:textColor="#000"
                    android:textSize="16px"/>


            <EditText
                    android:id="@+id/et_co_driver"
                    android:layout_marginTop="15dp"
                    android:hint="请输入副司机姓名"
                    android:textColor="#000"
                    android:lines="1"
                    android:background="@drawable/pda_txt"
                    android:textSize="16px"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <EditText
                    android:id="@+id/et_student"
                    android:layout_marginTop="15dp"
                    android:hint="请输入学员姓名"
                    android:textColor="#000"
                    android:lines="1"
                    android:background="@drawable/pda_txt"
                    android:textSize="16px"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
                android:layout_marginTop="100dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:textColor="#000000"
                    android:layout_marginTop="50dp"
                    android:textSize="16px"
                    android:text="天气："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/img_weather"
                    android:src="@drawable/weather_1"
                    android:onClick="onClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:orientation="horizontal">

        <RadioGroup
                android:id="@+id/radio_control_group"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16px"
                    android:text="主控"
                    android:textColor="#000"
                    android:id="@+id/radio_master_control"
                    android:layout_gravity="center"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16px"
                    android:text="从控"
                    android:textColor="#000"
                    android:id="@+id/radio_follow_control"
                    android:layout_gravity="center"/>
        </RadioGroup>
        <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginTop="9dp"
                android:textColor="#000000"
                android:textSize="16px"
                android:gravity="center"
                android:text="他车："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/et_other_car_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:hint=""
                android:textColor="#000"
                android:lines="1"
                android:background="@drawable/pda_txt"
                android:textSize="16px"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:textColor="#000000"
                android:textSize="16px"
                android:gravity="center"
                android:text="型："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/et_other_car_type"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:hint=""
                android:textColor="#000"
                android:background="@drawable/pda_txt"
                android:textSize="16px"
                android:gravity="center"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:textColor="#000"
                android:textSize="16px"
                android:gravity="center"
                android:text="司机："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/et_other_car_driver"
                android:layout_marginLeft="10dp"
                android:hint=""
                android:textColor="#000"
                android:layout_marginTop="9dp"
                android:background="@drawable/pda_txt"
                android:textSize="16px"
                android:gravity="center"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView
                android:textColor="#000000"
                android:textSize="16px"
                android:gravity="center"
                android:text="运行注意事项:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/et_run_note"
                android:textSize="16px"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"/>
        <TextView
                android:textColor="#000000"
                android:textSize="16px"
                android:gravity="center"
                android:text="记事:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:id="@+id/et_note"
                android:layout_width="match_parent"
                android:textSize="16px"
                android:lines="3"
                android:textColor="#000"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>